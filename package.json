{
  "name": "escape-room-gamemaster",
  "version": "1.0.0",
  "description": "Sistema de gesti√≥n para salas de escape con temporizadores sincronizados, pistas y soporte Chrome Cast",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "dev:server": "nodemon --config nodemon.json server/index.js",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
    "start": "npm run server",
    "app:dev": "npm run build && electron electron/main.js",
    "app:pack": "npm run build && electron-builder --dir",
    "app:dist": "npm run build && electron-builder"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tsconfig/svelte": "^5.0.4",
    "concurrently": "^8.2.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.7",
    "nodemon": "^3.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.6.0",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "lucide-svelte": "^0.400.0",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "sqlite3": "^5.1.7"
  },
  "postinstall": "electron-builder install-app-deps",
  "build": {
    "appId": "com.escaperoom.gamemaster",
    "productName": "Game Master",
    "files": [
      "dist/**",
      "server/**",
      "electron/**",
      "package.json"
    ],
    "asar": true,
    "publish": {
      "provider": "github",
      "owner": "GITHUB_USERNAME",
      "repo": "GITHUB_REPO_NAME"
    },
    "mac": { 
      "target": "dmg",
      "category": "public.app-category.games"
    },
    "win": { 
      "target": "nsis",
      "publisherName": "Game Master"
    },
    "linux": { "target": "AppImage" }
  }
}
